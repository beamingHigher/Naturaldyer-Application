extends base

block content
  .section
    .section-item
      .container
        .mt50.mb60
          .rounded-logo.rounded-logo-md.mb90.wow.fadeInUp
            img(src='./img/Logo.ico/android-icon-192x192.png' alt='logo')
          h2.fs42.wow.fadeInUp(data-wow-delay='.4s')
            a.text-white.text-underline(href='mailto:info@naturaldyers.com') info@naturaldyers.com
          h3.fs30.text-grey.mt90.wow.fadeInUp(data-wow-delay='.6s').           
            EE101937564 - 00188489991 ESTONIA - TALLINN 10117 Narva Mnt 5          
  .container-fluid
    .image.mask-skew.wow.fadeIn(data-wow-offset='150' data-wow-duration='0.2s' data-wow-delay='.3s')
      .mask.wow.slideInLeft(data-wow-offset='150' data-wow-duration='1.2s' data-wow-delay='.3s')
        .inside
  .section.black_background
    .section-item
      .container.wow.fadeInUp(data-wow-delay='.2s')
        h3.fs36.mb120.custom_yellow_color Get In Touch
        .container.contact-form
          .contact-image
            img(src='./img/logo.png' alt='logo')
          form
            h3.custom_yellow_color Drop Us a Message
            .row
              .col-md-12
                .form-group
                  input.form-control(type='text' name='txtName' placeholder='Your Name *')
                .form-group
                  input.form-control(type='text' name='txtEmail' placeholder='Your Email *')
                .form-group
                  input.form-control(type='text' name='txtPhone' placeholder='Your Phone Number *')
              .col-md-12
                .form-group
                  textarea.form-control(name='txtMsg' placeholder='Your Message *' style='width: 100%; height: 150px;')
                .form-group
                  input.btnContact(type='submit' name='btnSubmit' value='Send Message')

block append script
  script(src='js/owl.carousel.min.js')
  script(src='js/jquery.pagepiling.min.js')
  script(src='js/script.js')
  script(src='js/pageInit.js')
