extends ../adminBase

block content
  .panel-content#modelPanel
  .widget.pad50-65
    form.form-wrp#htmlForm(name='editCollection')
      .row.mrg20.warps
        .col.m4.col.s6.col.l4
          p Name
          input.brd-rd5#name(name='name' type='text' value=`${data.name}`)
          span.error-box
        .col.m4.col.s6.col.l4
          p Additional Percentage
          input.brd-rd5#additionalPercentage(name='additionalpercentage' type='number' value=`${data.additionalPercentage}`)
          span.error-box
        .col.m4.col.s6.col.l4
          p Loom Name
          input.brd-rd5.validate(name='code' type='text' value=`${data.loomId.name}` disabled=true)
          input#_id(type='hidden' name='target' value=`${data._id}`)
        .col.m6.col.s12.col.l6
          p Description
          textarea.brd-rd5#description()=data.description
        .col.m6.col.s12.col.l6
          p Notes
          textarea.brd-rd5#notes()=data.notes
      .row.mt-top-1
        .col.m6.s12.col.l6
          .opt-btn
            p Active
            label.switch-light.switch-candy
              input#active(type='checkbox' checked=data.active)
              span
                span Off
                span On
                a
      .col.m6.col.s12.col.l6
        img(class='preview_image' src=`/img/uploads/${data.image}`)
      .col.m12.col.s12.col.l12.save-now.mt-top-1
        button.green-bg.brd-rd5(type="submit") Submit