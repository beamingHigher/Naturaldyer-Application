extends ../adminBase

block content
  .panel-content#modelPanel
  .widget.pad50-65
    form.form-wrp#htmlForm(name='createCollection')
      .row.mrg20.warps
        .col.m6.col.s6.col.l6
          p Name
          input.brd-rd5#name(name='name' type='text' placeholder='Name*')
          span.error-box
        .col.m6.col.s6.col.l6
          p Additional Percentage
          input.brd-rd5#additionalPercentage(name='additionalpercentage' type='number' placeholder='Additional Percentage*')
          span.error-box
        .col.m6.col.s12.col.l6
          p Description
          textarea.brd-rd5#description(placeholder='Enter a description...')
        .col.m6.col.s12.col.l6
          p Notes
          textarea.brd-rd5#notes(placeholder='Write down some notes...')
        .col.m6.col.s12.col.l6.mt-top-1
          .file-upload-box
              strong Image
              .file-box
                label.fileContainer
                  span.blue-bg.brd-rd5 Choose File
                  span#titleFile No File Selected
                  input#file_input(type='file')
      .row.mt-top-1
        .col.m6.s12.col.l6
          .opt-btn
            p Active
            label.switch-light.switch-candy
              input#active(type='checkbox')
              span
                span Off
                span On
                a
        .col.m6.col.s12.col.l6.mt-top-1
          p Select Loom
            span.slct-bx
              span
                select#loomId
                  option(value='0' selected=true) Select Loom
                  each loom in allActiveLoom
                    option(value= loom._id)= loom.name
        .col.m12.col.s12.col.l12.save-now.mt-top-1
          button.green-bg.brd-rd5(type="submit") Submit