extends ../adminBase

block content
  .panel-content#modelPanel
    .widget.pad50-65
      form.form-wrp#htmlForm(name='editModule')
        .row.mrg20.warps
          .col.m4.col.s6.col.l4
            p Code
            input.brd-rd5#code(name='code' type='text' value=`${data.code}`)
            span.error-box
          .col.m4.col.s6.col.l4
            p Beats Number
            input.brd-rd5#beatsNumber(name='beatsnumber' type='number' value=`${data.beatsNumber}`)
            span.error-box
          .col.m4.col.s6.col.l4
            p Minimum Weight
            input.brd-rd5#maximumWeight(name='minimumweight' type='number' value=`${data.minimumWeight}`)
            span.error-box
          .col.m4.col.s6.col.l4
            p Maximum Weight
            input.brd-rd5#minimumWeight(name='maximumweight' type='number' value=`${data.maximumWeight}`)
            span.error-box
          .col.m4.col.s12.col.l4
            p Pattern Name
            input.brd-rd5.validate(name='pattern' type='text' value=`${data.patternId.code}` disabled=true)
            input#_id(type='hidden' name='target' value=`${data._id}`)
            span.error-box
          .col.m4.col.s12.col.l4
            p Order
            input.brd-rd5#order(name='order' type='number' value=`${data.order}`)
            span.error-box
          .col.m6.s12.col.l6
            .opt-btn
              p Active
              label.switch-light.switch-candy
                input#active(type='checkbox' checked=data.active)
                span
                  span Off
                  span On
                  a
        .col.m6.col.s12.col.l6
          img(class='preview_image' src=`/img/uploads/${data.image}`)
        .col.m12.col.s12.col.l12.save-now.mt-top-1
          button.green-bg.brd-rd5(type="submit") Submit