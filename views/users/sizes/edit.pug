extends ../adminBase

block content
  .panel-content#modelPanel
  .widget.pad50-65
    form.form-wrp#htmlForm(name='editSize')
      .row.mrg20.warps
        .col.m3.col.s6.col.l3
          p Name
          input.brd-rd5#name(name='name' type='text' value=`${data.name}`)
          span.error-box
        .col.m3.col.s6.col.l3
          p Length
          input.brd-rd5#length(name='length' type='number' value=`${data.length}`)
          span.error-box
        .col.m3.col.s6.col.l3
          p Plots Reduction
          input.brd-rd5#plotsReduction(name='plotreduction' type='number' value=`${data.plotsReduction}`)
          span.error-box
        .col.m3.col.s6.col.l3
          p Collection Name
          input.brd-rd5.validate(name='collection' type='text' value=`${data.collectionId.name}` disabled=true)
          input#_id(type='hidden' name='target' value=`${data._id}`)
          span.error-box
        .col.m6.col.s12.col.l6
          p Description
          textarea.brd-rd5#description()=data.description
        .col.m6.col.s12.col.l6
          p Notes
          textarea.brd-rd5#notes()=data.notes
      .row.mt-top-1
        .col.m6.s12.col.l6
          .opt-btn
            p Active
            label.switch-light.switch-candy
              input#active(type='checkbox' checked=data.active)
              span
                span Off
                span On
                a
      .col.m6.col.s12.col.l6
        img(class='preview_image' src=`/img/uploads/${data.image}`)
      .col.m12.col.s12.col.l12.save-now.mt-top-1
        button.green-bg.brd-rd5(type="submit") Submit